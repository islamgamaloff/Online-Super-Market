<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    tools:context="com.example.islamgsayed.onlinesupermarket.RegistrationActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="8dp">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/Name_Reg_ET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Name"
            android:textColorHint="#fff"
            app:met_baseColor="#fff"
            app:met_primaryColor="#fff"
            app:met_singleLineEllipsis="true"
            app:met_maxCharacters="25"
            app:met_floatingLabel="highlight"
            android:inputType="textPersonName"
            android:textSize="34sp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/Email_Reg_ET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Email"
            android:textColorHint="#fff"
            app:met_baseColor="#fff"
            app:met_primaryColor="#fff"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:inputType="textEmailAddress"
            android:textSize="34sp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/Phone_Reg_ET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Mobile Number"
            android:textColorHint="#fff"
            app:met_baseColor="#fff"
            app:met_primaryColor="#fff"
            app:met_singleLineEllipsis="true"
            app:met_maxCharacters="11"
            app:met_floatingLabel="highlight"
            android:inputType="phone"
            android:textSize="34sp"
            >



        </com.rengwuxian.materialedittext.MaterialEditText>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/Password_Reg_ET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Password"
            android:textColorHint="#fff"
            app:met_baseColor="#fff"
            app:met_primaryColor="#fff"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:inputType="textPassword"
            android:textSize="34sp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        android:weightSum="2"
        >

        <info.hoang8f.widget.FButton
            android:id="@+id/Back_Button"
            android:textColor="#fff"
            android:shadowColor="#000"
            app:cornerRadius="4dp"
            app:shadowHeight="5dp"
            app:shadowEnabled="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="#99000000"
            android:layout_margin="3dp"
            app:buttonColor="#550b09"

            />


        <View
            android:background="#99521900"
            android:layout_height="fill_parent"
            android:layout_width="2dp"
            />
        <info.hoang8f.widget.FButton
            android:id="@+id/Continue"
            android:background="#99000000"
            android:textColor="#fff"
            android:shadowColor="#000"
            app:cornerRadius="4dp"
            app:shadowHeight="5dp"
            app:shadowEnabled="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Continue"
            android:layout_margin="3dp"
            app:buttonColor="#550b09"

            />


    </LinearLayout>
</RelativeLayout>
